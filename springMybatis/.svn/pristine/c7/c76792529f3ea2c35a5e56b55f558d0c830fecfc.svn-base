body {
	padding: 20px;
	overflow:hidden;
}

#txtPanel {
    width: 478px;
	float: left;
}

label {
	color: #333;
}

input[type='text'],input[type='password'],textarea {
	font-size: 15px;
	margin: 10px 0 12px 20px;
	width: 80%;
}

.errTips {
	color: red;
	font-size: 15px;
	position: relative;
	float: right;
	margin: -39px 30px 10px 0;
	opacity: 0;
	transition: all 250ms;
	background-color: white;
}

.showErrTips {
	opacity: 1;
    margin: -39px 39px 10px 0px;
}

.line {
	position: relative;
}

/*灰色占位符*/
.placeholder {
	font-size: 15px;
	color: darkgrey;
	position: absolute;
	top: 38px;
	left: 12px;
	display: none; /*所有浏览器隐藏*/
	display: block\0; /*IE8~IE11显示*/
	margin:-20px 0 0px 72px;
}

/*在IE10以上版本中隐藏，最终只在IE7~IE9中显示，因为只有IE7~IE9不支持placeholder*/
@media screen and (-ms-high-contrast: active) , ( -ms-high-contrast : none) {
	.placeholder {
		display: none; /*仅仅对>=IE10有效*/
		
	}
}

/*登录失败的按钮样式*/
.btnErr {
	border: 2px solid #d60f00 !important;
	background-color: #f5493d !important;
}

/*登录成功*/
.btnSuccess {
	border: 2px solid #009688 !important;
	background-color: #25b788 !important;
}

