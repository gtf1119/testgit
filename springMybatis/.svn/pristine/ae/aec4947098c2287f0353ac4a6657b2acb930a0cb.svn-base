#regPanel{
	width: 40%;
	max-lenght:650px;
	min-lenght:400px;
	margin:0 auto;
	position:relative;
	top:50%;
	margin-top:-150px;
}

#regTitle{
	font-size:30px;
}

#subTitle{
    padding: 15px 0;
}

input[type='text'],input[type='password']{
	font-size: 14px;
    margin: 0 0 12px 0;
    width: 100%;
    margin-top: 6px;
}

.errTips{
	position:relative;
	float:right;
	color:red;
    margin: -39px 3px 10px 0px;
    opacity: 0;
	transition: all 250ms;
	background:white;
}

.showErrTips{
 	opacity: 1;
 	margin: -39px 10px 10px 0px;
}

a{
    float: right;
    text-decoration: none;
    color: #3699e8;
    margin-top:3px;
}

#btnReg{
	float:right;
	margin-right:15px;
    padding: 5px 15px;
    border: 1px solid #2d9fd2;
}

/*登录失败的按钮样式*/
.btnErr {
	border: 2px solid #d60f00 !important;
	background-color: #f5493d !important;
}

/*登录成功*/
.btnSuccess {
	border: 2px solid #009688 !important;
	background-color: #25b788 !important;
}

.line{
	position:relative;
}

.placeholder{
    font-size: 14px;
    position: absolute;
    top: 33px;
    left: 12px;
    color: darkgray;
    display:none;
    display:block\0;
}

/*在IE10以上版本中隐藏，最终只在IE7~IE9中显示，因为只有IE7~IE9不支持placeholder*/
@media screen and (-ms-high-contrast: active), (-ms-high-contrast: none) {
   .placeholder {
		display: none; /*仅仅对>=IE10有效*/
	}
}