#dialog{

    border: 1px solid #035aa9;
	position:absolute;
	top:50%;
	left:50%;
	z-index:5;
}

#titleBar{
    background-color: #3e94e1;
}
#titleText{
	color: white;
    padding: 8px 15px;
    user-select:none;
}
#dialogIframe {
	width:100%;
	height:100%;
	background:white;
}

#btnClose{
    position: absolute;
    top: 7px;
    right: 7px;
    width: 23px;
    border: 1px solid #036bca;
    text-align: center;
    color: white;
    user-select:none;
    cursor:pointer;
}

#btnClose:hover{
    background: #52a6f1;
}

#btnClose:active{
	background: #0f7ee2;
}


/*弹出层样式*/
#dialogMask{
	position:absolute;
	top:0;
	left:0;
	background:black;
	z-index:3;
	width:100%;
	height:100%;
	opacity:0.2;
	
	/*IE8*/
	filter:alpha(opacity=20);
}


#dialogContent {
	background-color: white;
	position: absolute;
	top: 36px;
	left: 0px;
	width: 100%;
}

.dialogBtn {
	padding: 5px 30px;
}

#btnOk {
	margin-right: 60px;
}

#contentMsg {
    text-align: center;
    margin: 42px 0;
}

#btnBar {
	text-align: center;
    padding: 0px 0px 40px 0px;
}


/*横屏风格的弹出层*/
.xdialog {
	width: 100%;
	position: absolute;
	z-index: 999;
	background-color: white;
	box-shadow: 0 2px 10px #9a9a9a;
	transform: scale(1);
	opacity: 1;
	overflow: hidden;
	transition:all 250ms;
}

/*弹出层内容*/
.xdialogContent {
	margin: 0 auto;
	padding: 30px 0 20px 0;
}

/*弹出层隐藏*/
.xdialogHidden {
	transform: scale(1, 0.5) !important;
	opacity: 0;
}

/*弹出层标题*/
.xdialogTitle {
	    font-size: 22px;
    padding-bottom: 20px;
    text-align: -webkit-center;
}

.xdialogIframe {
	width: 100%;
}

/*弹出层遮罩层*/
.xdialogMask {
	width: 100%;
	height: 100%;
	background-color: black;
	position: absolute;
	top: 0;
	left: 0;
	z-index: 998;
}
#btnxDialogClose{
	    width: 20px;
    height: 20px;
    text-align: -webkit-center;
    position: relative;
    top: -44px;
    left: 870px;
    cursor: pointer;
}
